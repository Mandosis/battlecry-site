h1 Sign in
div(class="alert alert-danger" ng-if="login.error")
  p {{login.error}}
form
  div.form-group
    label(for="username") Username
    input(type="text" ng-model="login.username" class="form-control" id="username")
  div.form-group
    label(for="password") Password
    input(type="password" ng-model="login.password" class="form-control")
  button(type="submit" class="btn btn-primary" ng-click="login.login()") Sign in
