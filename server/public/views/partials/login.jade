h1 Sign in
p {{login.error}}
form
  div.form-group
    label(for="username") Username
    input(type="text" ng-model="login.username" class="form-control" id="username")
  div.form-group
    label Password
    input(type="password" ng-model="login.password" class="form-control")
  button(type="submit" class="btn btn-default" ng-click="login.login()") Sign in
