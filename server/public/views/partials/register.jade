div.container-fluid
  h1 Sign up
  p {{vm.errors}}

  div(ng-repeat="error in register.errors track by $index")
    div(class="alert alert-danger")
      p {{error}}
    
  p {{register.error}}
  form
    div.form-group
      label(for="username") Username
      input(type="text" ng-model="register.username" class="form-control" id="username")
    div.form-group
      label(for="password") Password
      input(type="password" ng-model="register.password" class="form-control")
    div.form-group
      label(for="password-confirm") Confirm Password
      input(type="password" ng-model="register.passwordConfirm" class="form-control")
    button(type="submit" class="btn btn-primary" ng-click="register.register()") Sign up
